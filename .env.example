# ==========================================
# 通知器配置
# ==========================================
# 通知器类型: telegram / dingtalk / feishu / wecom
NOTIFIER_TYPE=telegram

# ==========================================
# Telegram 配置 (NOTIFIER_TYPE=telegram 时必需)
# ==========================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# ==========================================
# 钉钉配置 (NOTIFIER_TYPE=dingtalk 时必需)
# ==========================================
# 钉钉群机器人 Webhook URL
# DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=xxx
# 加签密钥 (可选,推荐使用以提高安全性)
# DINGTALK_SECRET=your_secret_here

# ==========================================
# 飞书配置 (NOTIFIER_TYPE=feishu 时必需)
# ==========================================
# 飞书群机器人 Webhook URL
# FEISHU_WEBHOOK=https://open.feishu.cn/open-apis/bot/v2/hook/xxx

# ==========================================
# 企业微信配置 (NOTIFIER_TYPE=wecom 时必需)
# ==========================================
# 企业微信群机器人 Webhook URL
# WECOM_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxx

# ==========================================
# 功能开关
# ==========================================
ENABLE_GITHUB_ISSUE=false
ENABLE_GITHUB_STATS=true
ENABLE_DUOLINGO=true
ENABLE_POEM=true
ENABLE_APPLE_HEALTH=true
ENABLE_XIAOMI_SPORT=false
ENABLE_WEREAD=false
ENABLE_STEAM=true

# ==========================================
# GitHub 统计 (可选)
# ==========================================
GITHUB_TOKEN=your_github_token
GITHUB_USERNAME=your_github_username

# ==========================================
# 小米运动 (可选)
# ==========================================
XIAOMI_USERNAME=your_phone_or_email
XIAOMI_PASSWORD=your_password

# ==========================================
# 微信读书 (可选)
# ==========================================
# 需要从 i.weread.qq.com 的请求中获取 Cookie
WEREAD_COOKIE=your_weread_cookie

# ==========================================
# 多邻国 (可选)
# ==========================================
DUOLINGO_USERNAME=your_duolingo_username
# JWT Token 从浏览器获取:
# document.cookie.match(new RegExp('(^| )jwt_token=([^;]+)'))[0].slice(11)
DUOLINGO_JWT_TOKEN=your_jwt_token

# ==========================================
# Steam (可选)
# ==========================================
# API Key 申请: https://steamcommunity.com/dev/apkey
# Steam ID64 获取: https://steamid.io/
STEAM_API_KEY=your_steam_api_key
STEAM_ID=your_steam_id64
